<?xml version="1.0" encoding="UTF-8" ?>

<atmoswing_file version="1.0" target="calibrator">
    <description>
        <method_id>PD-A2Z</method_id>
        <method_id_display>Classic circulation</method_id_display>
        <specific_tag>somwhere</specific_tag>
        <specific_tag_display>groupment of interest</specific_tag_display>
        <description>Classic analogy on the atmospheric circulation (2 levels)</description>
    </description>
    <time_properties>
        <archive_period>
            <start_year>1962</start_year>
            <end_year>2007</end_year>
        </archive_period>
        <calibration_period>
            <start_year>1982</start_year>
            <end_year>2000</end_year>
        </calibration_period>
        <time_step>24</time_step>
        <time_array_target>
            <time_array>simple</time_array>
        </time_array_target>
        <time_array_analogs>
            <time_array>days_interval</time_array>
            <interval_days min="10" max="100" step="10" method="minmax">60</interval_days>
            <exclude_days>60</exclude_days>
        </time_array_analogs>
    </time_properties>
    <analog_dates>
        <analogs_number>100</analogs_number>
        <predictor>
            <preprocessing>
                <preprocessing_method>Gradients</preprocessing_method>
                <preprocessing_data>
                    <dataset_id>NCEP_R-1</dataset_id>
                    <data_id>hgt</data_id>
                    <level method="array">300,500,850,1000</level>
                    <time min="-24" max="24" step="6" method="minmax"></time>
                </preprocessing_data>
            </preprocessing>
            <spatial_window>
                <x_min min="-10" max="20" step="2.5" method="minmax"></x_min>
                <x_points_nb>2</x_points_nb>
                <x_step>2.5</x_step>
                <y_min min="10" max="70" step="2.5" method="minmax"></y_min>
                <y_points_nb>2</y_points_nb>
                <y_step>2.5</y_step>
            </spatial_window>
            <criteria>S1</criteria>
            <weight>1</weight>
        </predictor>
    </analog_dates>
    <analog_values>
        <predictand>
            <station_id method="array">40,81,90,68,56</station_id>
        </predictand>
    </analog_values>
    <analog_forecast_score>
        <score method="array">CRPSAR, CRPSaccuracyAR, CRPSsharpnessAR</score>
    </analog_forecast_score>
    <analog_forecast_score_final>
        <time_array>simple</time_array>
    </analog_forecast_score_final>
</atmoswing_file>
